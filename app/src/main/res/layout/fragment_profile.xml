<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ifirenet.clientfirenetwebhouse.Fragments.ProfileFragment"
    android:background="#cccccc"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:gravity="right"
    android:paddingTop="5dp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--  First Name Label -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/card_margin_xmedium"
                android:layout_marginLeft="@dimen/card_margin_xmedium"
                android:layout_marginRight="@dimen/card_margin_xmedium">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="نام:"
                        android:ems="10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="top"
                        android:layout_margin="@dimen/card_content_margin"
                        android:textSize="@dimen/txt_size_large" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_content_margin"
                        android:layout_weight="2"
                        android:textColor="#ffffff">
                        <EditText android:id="@+id/input_profile_firstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text|textEmailAddress"
                            android:hint="First Name"
                            android:maxLength="30"
                            android:nestedScrollingEnabled="true"
                            android:enabled="false" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--  Last Name Label -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/card_margin_xmedium"
                android:layout_marginLeft="@dimen/card_margin_xmedium"
                android:layout_marginRight="@dimen/card_margin_xmedium"
                android:visibility="visible">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="نام خانوادگی:"
                        android:ems="10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="top"
                        android:layout_margin="@dimen/card_content_margin"
                        android:textSize="@dimen/txt_size_large" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:layout_margin="@dimen/card_content_margin">
                        <EditText android:id="@+id/input_profile_lastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text|textEmailAddress"
                            android:hint="Last Name"
                            android:maxLength="30"
                            android:enabled="false" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--  Email Label -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/card_margin_xmedium"
                android:layout_marginLeft="@dimen/card_margin_xmedium"
                android:layout_marginRight="@dimen/card_margin_xmedium">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="پست الکترونیک:"
                        android:ems="10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="top"
                        android:layout_margin="@dimen/card_content_margin"
                        android:textSize="@dimen/txt_size_large" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_content_margin"
                        android:layout_weight="2"
                        android:textColor="#ffffff">
                        <EditText android:id="@+id/input_profile_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:hint="Email"
                            android:maxLength="30"
                            android:enabled="false" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--  Phone Label -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/card_margin_xmedium"
                android:layout_marginLeft="@dimen/card_margin_xmedium"
                android:layout_marginRight="@dimen/card_margin_xmedium">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="تلفن ثابت:"
                        android:ems="10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="top"
                        android:layout_margin="@dimen/card_content_margin"
                        android:textSize="@dimen/txt_size_large" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_content_margin"
                        android:layout_weight="2"
                        android:textColor="#ffffff">
                        <EditText android:id="@+id/input_profile_phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone Number"
                            android:maxLength="15"
                            android:inputType="phone"
                            android:enabled="false" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--  Phone Number Label -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/card_margin_xmedium"
                android:layout_marginLeft="@dimen/card_margin_xmedium"
                android:layout_marginRight="@dimen/card_margin_xmedium">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="تلفن همراه:"
                        android:ems="10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/card_content_margin"
                        android:layout_gravity="top"
                        android:textSize="@dimen/txt_size_large" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_content_margin"
                        android:layout_weight="2"
                        android:textColor="#ffffff">
                        <EditText android:id="@+id/input_profile_cellPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cellphone Number"
                            android:maxLength="12"
                            android:inputType="phone"
                            android:enabled="false" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--  Company Label -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/card_margin_xmedium"
                android:layout_marginLeft="@dimen/card_margin_xmedium"
                android:layout_marginRight="@dimen/card_margin_xmedium">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:ems="10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_gravity="top"
                        android:layout_margin="@dimen/card_content_margin"
                        android:text="سازمان یا شرکت:"
                        android:textSize="@dimen/txt_size_large" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_content_margin"
                        android:layout_weight="2"
                        android:textColor="#ffffff">
                        <EditText android:id="@+id/input_profile_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Company"
                            android:maxLength="30"
                            android:enabled="false" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--  Submit Bottom -->
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_profile_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp"
                android:layout_margin="@dimen/card_margin_xmedium"
                android:visibility="invisible">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="تایید"
                        android:textColor="@color/white"
                        android:padding="@dimen/card_content_margin"
                        android:layout_centerInParent="true"
                        android:longClickable="false"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>













</LinearLayout>
