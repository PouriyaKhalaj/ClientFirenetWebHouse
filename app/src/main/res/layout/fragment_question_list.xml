<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TicketListFragment"
    android:background="#cccccc"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/ll_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فهرست پرسش ها"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="@dimen/txt_size_xlarge" />

        <android.support.v7.widget.RecyclerView
            android:paddingTop="?attr/actionBarSize"
            android:id="@+id/recycler_view_question_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:overScrollMode="never"/>

    </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_follow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_arrow_up"
            app:layout_anchor="@id/recycler_view_question_list"
            app:layout_anchorGravity="bottom|end" />
</android.support.design.widget.CoordinatorLayout>
