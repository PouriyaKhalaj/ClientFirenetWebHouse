<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Customer.CustomerTicketFragment"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/ll_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فهرست درخواست ها"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_question_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:transitionGroup="false"
            android:touchscreenBlocksFocus="false" />

    </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_follow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_up_arrow"
            app:layout_anchor="@id/recycler_view_question_list"
            app:layout_anchorGravity="bottom|end"
            app:backgroundTint="#64414b55"
            app:backgroundTintMode="src_over"
            app:elevation="6dp"
            app:borderWidth="0dp"
            app:fabSize="mini"
            android:adjustViewBounds="false"
            android:background="#64414b55" />
</android.support.design.widget.CoordinatorLayout>
